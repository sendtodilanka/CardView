<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="104dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:text="Jennifer Lopez"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView2"
            android:id="@+id/cusName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textSize="8sp"
            android:layout_below="@+id/cusName"
            android:layout_alignStart="@+id/cusName"
            android:id="@+id/orderStatus" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_below="@+id/orderStatus"
            android:layout_alignStart="@+id/orderStatus"
            android:id="@+id/imageView3" />

        <TextView
            android:id="@+id/fuelType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:text="Diesel"
            android:textSize="8sp"
            android:textColor="@android:color/black"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_below="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:id="@+id/imageView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:text="20000 L"
            android:textSize="8sp"
            android:textColor="@android:color/black"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:id="@+id/fuelVolume" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:id="@+id/imageView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="MVR. 300.00"
            android:textSize="8sp"
            android:textColor="@android:color/black"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignStart="@+id/fuelVolume"
            android:id="@+id/fuelPrice" />

        <ImageButton
            android:id="@+id/btnCardMore"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:background="@android:color/transparent"
            android:layout_alignBottom="@+id/fuelPrice"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>